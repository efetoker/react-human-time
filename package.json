{
  "name": "react-live-time",
  "version": "0.0.1",
  "description": "A lightweight and dependency-free React library for displaying human-readable, live-updating relative time without hooks.",
  "author": "Efe Toker <efetoker@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/efetoker/react-live-time.git"
  },
  "keywords": [
    "react",
    "time",
    "date",
    "format",
    "relative",
    "live",
    "human",
    "timeago"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "dev": "npm run build -- --watch",
    "prepublishOnly": "npm test && npm run lint && npm run build"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.31.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.0.14",
    "@types/react": "^18.3.3",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.6.2",
    "react": "^18.2.0",
    "react-dom": "^19.1.0",
    "ts-jest": "^29.1.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}
